#Solution #1 using an array
var i = 0
var x = []

while (i < 1001) {
    
    if (i % 3 ===0 || i % 5 === 0) {
        x.push(i)
        i++
    }
    else {
        i++
    }
}

var total=0;

for(var a in x) 
{ total += x[a]; }

#Solution #2 
var i = 0
var b = 0

while (i < 1001) {
    
    if (i % 3 ===0 || i % 5 === 0) {
        b = b + i
        i++
    }
    else {
        i++
    }
}

console.log(b)
